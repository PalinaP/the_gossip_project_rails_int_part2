<header>

</header>

<body class="container">
<br />
<h1 class="lead"> Modification du commentaire</h1>

  <!--Alert message if save fail-->
  <% if @comment.errors.any? %>
   <div class="alert alert-danger" role="alert">
     <h4>Your new comment could not be saved for the following reasons. Please try again.</h4>
     <hr>
     <p class="mb-0">
       <% @comment.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </p>
   </div>
   <% end %>
   <br/>

  <!--form completed with comment data, fields can be modified for update -->
  <%= form_tag url_for(action: 'update'), method: "patch" do %>

    <%= label_tag 'Update your comment:' %><br />
    <%= text_area_tag 'content', @comment.content %>
    <br /> <br />

    <%= hidden_field_tag 'id', "#{@comment.id}" %>
    <%= hidden_field_tag 'gossip_id', "#{@comment.gossip_id}" %>
    <%= submit_tag "Update Comment" %>

  <% end %>

  <!-- button suppress comment -->
  <button type="button" class="btn btn-outline-dark btn-lg">
  		<%= link_to "Supprimer le potin", comment_path(@comment.id),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></button>

</body>
