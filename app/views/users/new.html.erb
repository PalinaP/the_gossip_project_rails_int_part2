<body class = "container">

  <h1> Création de compte utilisateur </h1>

  <!-- message d'erreur si la création de compte n'a pas marché-->
  <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <p> Veuillez saisir les informations ci-dessous pour créer un compte Gossips </p>

  <!--form for new session -->
  <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Prénom :' %>
    <%= text_field_tag 'first_name' %>
    <br /> <br />

    <%= label_tag 'Nom :' %>
    <%= text_field_tag 'last_name' %>
    <br /> <br />

    <%= label_tag 'Ville :' %>
    <%= text_field_tag 'city' %>
    <br /> <br />

    <%= label_tag 'Code Postal :' %>
    <%= text_field_tag 'zip_code' %>
    <br /> <br />

    <%= label_tag 'Age :' %>
    <%= text_field_tag 'age' %>
    <br /> <br />

    <%= label_tag 'Email :' %>
    <%= text_area_tag 'email' %>
    <br /> <br />

    <%= label_tag 'Password :' %>
    <%= text_area_tag 'password' %>
    <br /> <br />

    <%= submit_tag "Créer un compte" %>

  <% end %>

</body>
